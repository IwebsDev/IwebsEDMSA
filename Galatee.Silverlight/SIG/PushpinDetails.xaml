<UserControl x:Class="Galatee.Silverlight.SIG.PushpinDetails"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    
    <Grid x:Name="LayoutRoot" Background="White">
        <Border BorderBrush="#FF616060" BorderThickness="2">
        <StackPanel Name="MainStack" Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding NomAbonne}" />
                <TextBlock Text=" -- " />
                <TextBlock Text="{Binding NumeroClient}" />
            </StackPanel>
            <TextBlock Text="{Binding Telephone}"/>
            <TextBlock Text="{Binding Centre}"/>
        </StackPanel>
        </Border>
    </Grid>
</UserControl>
