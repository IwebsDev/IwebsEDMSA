<sdk:ChildWindow
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk" xmlns:Controls="clr-namespace:SilverlightContrib.Controls;assembly=SilverlightContrib.Controls" x:Class="Galatee.Silverlight.Administration.UcChangerPassword"
           Width="490" Height="238" 
           Title="Changement mot de passe " OverlayBrush="Transparent" Style="{StaticResource ChildWindowGalatee}" IsTabStop="False" KeyDown="ChildWindow_KeyDown">
    <Grid x:Name="LayoutRoot" Margin="8,2,-14,-30">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Controls:GroupBox FontWeight="SemiBold" Margin="0,0,21,58" x:Name="groupBox1_Copy1" IsTabStop="False"   />

        <Button x:Name="CancelButton" Content="Fermer" Click="CancelButton_Click" Width="75" Height="23" HorizontalAlignment="Right" Margin="0,138,22,30" />
        <Button x:Name="OKButton" Content="OK" Click="OKButton_Click" Width="75" Height="23" HorizontalAlignment="Left" Margin="282,140,0,32" TabIndex="2" />
        <sdk:Label Content="Login " Height="20" HorizontalAlignment="Left" Margin="16,25,0,0" x:Name="lbl_login" VerticalAlignment="Top" Width="189" />
        <TextBox Height="23" HorizontalAlignment="Right" IsReadOnly="True"  Margin="0,21,48,0" x:Name="txt_Login" VerticalAlignment="Top" Width="214" IsTabStop="False"  />
        <sdk:Label Content="Nouveau password " Height="20" HorizontalAlignment="Left" Margin="16,56,0,0" x:Name="lbl_new_pwd" VerticalAlignment="Top" Width="189" />
        <PasswordBox Height="23" HorizontalAlignment="Right"  Margin="0,80,47,0" x:Name="txt_confirm" VerticalAlignment="Top" Width="215" IsTabStop="True" TabIndex="1"  />
        <sdk:Label Content=" Confirmer" Height="20" Margin="13,83,0,0" x:Name="lbl_password_conf" VerticalAlignment="Top" HorizontalAlignment="Left" Width="192" />
        <PasswordBox Height="23" HorizontalAlignment="Right"  Margin="0,52,47,0" x:Name="txt_new" VerticalAlignment="Top" Width="215" IsTabStop="True" TabIndex="0" />
        <!--<sdk:Label Content="Ancien password " Height="20" HorizontalAlignment="Left" Margin="16,52,0,0" x:Name="lbl_old" VerticalAlignment="Top" Width="107" />-->
        <!--<PasswordBox Height="23" HorizontalAlignment="Right"  Margin="0,48,47,0" x:Name="txt_old" VerticalAlignment="Top" Width="215" />-->
    </Grid>
</sdk:ChildWindow>