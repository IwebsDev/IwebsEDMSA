        <Button x:Name="CancelButton" Content="Cancel" Click="CancelButton_Click" Width="75" Height="23" HorizontalAlignment="Right" Margin="0,12,0,0" Grid.Row="1" />
        <Button x:Name="OKButton" Content="OK" Click="OKButton_Click" Width="75" Height="23" HorizontalAlignment="Right" Margin="0,12,79,0" Grid.Row="1" />
        <sdk:Label HorizontalAlignment="Left" Content="Nom du fichier:" Height="28" VerticalAlignment="Top" Width="146" Margin="10,52,0,0"/>
        <TextBox x:Name="txt_Chemin_DAcces" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="380" Margin="161,52,0,0"/>
        <Button Content="..." HorizontalAlignment="Left" VerticalAlignment="Top" Width="61" Margin="546,53,0,0" Click="Button_Click"/>
        <ProgressBar x:Name="prgBar" Visibility="Collapsed" HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="436" IsIndeterminate="True" Margin="10,12,0,0" Grid.Row="1"/>

    </Grid>
</controls:ChildWindow>