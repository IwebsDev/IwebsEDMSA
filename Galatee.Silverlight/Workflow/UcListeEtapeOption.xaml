<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk" x:Class="Galatee.Silverlight.Workflow.UcListeEtapeOption"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">

    <Grid x:Name="LayoutRoot" Background="White" Margin="0,0,-164,-9">

        <sdk:DataGrid HorizontalAlignment="Left" Height="259" Margin="0,50,0,0" VerticalAlignment="Top" Width="561" Name="dtgEtape" AutoGenerateColumns="False" >
            <sdk:DataGrid.Columns>
                <sdk:DataGridTextColumn CanUserReorder="True" CanUserResize="True" CanUserSort="True" Header="Etape" Binding="{Binding  NOM}"   MaxWidth="175" MinWidth="50" />
                <sdk:DataGridTextColumn CanUserReorder="True" CanUserResize="True" CanUserSort="True" Header="Nombre" Binding="{Binding NOMBREDEMANDE}"   MaxWidth="175" MinWidth="50" FontWeight="Normal" />
            </sdk:DataGrid.Columns>
        </sdk:DataGrid>
        <sdk:Label HorizontalAlignment="Left" Height="48" VerticalAlignment="Top" Width="554" Name="lbl_Circuitname"/>

    </Grid>
</UserControl>
