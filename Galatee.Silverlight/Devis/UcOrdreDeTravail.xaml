                    <TextBox Height="23" HorizontalAlignment="Left" IsReadOnly="True" Margin="389,433,0,0" MaxLength="50" x:Name="Txt_TotalTva" VerticalAlignment="Top" Width="183" Grid.Column="1" />
                </Grid>
