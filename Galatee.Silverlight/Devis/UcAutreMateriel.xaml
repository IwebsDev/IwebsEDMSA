<controls:ChildWindow
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk" x:Class="Galatee.Silverlight.Devis.UcAutreMateriel"
           Width="556.846" Height="310.353" 
           Title="Autres Materiels" Style="{StaticResource ChildWindowGalatee}">
    <Grid x:Name="LayoutRoot" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Button x:Name="CancelButton" Content="Annuler" Click="CancelButton_Click" Width="75" Height="23" HorizontalAlignment="Right" Margin="0,12,0,0" Grid.Row="1" />
        <Button x:Name="OKButton" Content="OK" Click="OKButton_Click" Width="75" Height="23" HorizontalAlignment="Right" Margin="0,12,79,0" Grid.Row="1" />
        <sdk:Label Content="Libellé" HorizontalAlignment="Left" Height="28" Margin="51,59,0,0" VerticalAlignment="Top" Width="120"/>
        <sdk:Label Content="Nombre" HorizontalAlignment="Left" Height="28" Margin="51,97,0,0" VerticalAlignment="Top" Width="120"/>
        <sdk:Label Content="Nombre livré" HorizontalAlignment="Left" Height="28" Margin="51,125,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="txtLibelle" HorizontalAlignment="Left" Height="23" Margin="171,59,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="303"/>
        <TextBox Name="txtNombre" HorizontalAlignment="Left" Height="23" Margin="171,93,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox  Name="txtLivre" HorizontalAlignment="Left" Height="23" Margin="171,125,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <sdk:Label Content="Type matériel" HorizontalAlignment="Left" Height="28" Margin="51,27,0,0" VerticalAlignment="Top" Width="120"/>
        <ComboBox Name="cboTypeMateriel" HorizontalAlignment="Left" Margin="171,25,0,0" VerticalAlignment="Top" Width="303" SelectionChanged="cboTypeMateriel_SelectionChanged"/>
    </Grid>
</controls:ChildWindow>