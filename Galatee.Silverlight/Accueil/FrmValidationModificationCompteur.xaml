        <sdk:Label Content="Marque" Height="19" HorizontalAlignment="Left" Margin="521,227,0,0" x:Name="lbl_Marque_Copy" VerticalAlignment="Top" Width="200" />
        <sdk:Label Content="Cadran" Height="19" HorizontalAlignment="Left" Margin="522,282,0,0" x:Name="lbl_cadran_Copy" VerticalAlignment="Top" Width="198" />
