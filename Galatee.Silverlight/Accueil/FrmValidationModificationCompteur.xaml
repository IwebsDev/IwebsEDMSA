        <sdk:Label Content="Numéro de compteur" Height="19" HorizontalAlignment="Left" Margin="20,156,0,0" x:Name="lbl_NumeroCompteur" VerticalAlignment="Top" Width="153" />
        <sdk:Label Content="Année de fabrication" Height="19" HorizontalAlignment="Left" Margin="19,181,0,0" x:Name="lbl_AnneFabrication" VerticalAlignment="Top" Width="153" />
        <sdk:Label Content="Type " Height="19" HorizontalAlignment="Left" Margin="20,258,0,0" x:Name="lbl_type" VerticalAlignment="Top" Width="153" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="224,180,0,0" x:Name="Txt_AnneeFab" VerticalAlignment="Top" Width="126" IsReadOnly="True" />
        <sdk:Label Content="Calibre" Height="19" HorizontalAlignment="Left" Margin="19,206,0,0" x:Name="lbl_Diametre" VerticalAlignment="Top" Width="153" />
        <sdk:Label Content="Marque" Height="19" HorizontalAlignment="Left" Margin="19,231,0,0" x:Name="lbl_Marque" VerticalAlignment="Top" Width="153" />
        <sdk:Label Content="Cadran" Height="19" HorizontalAlignment="Left" Margin="21,282,0,0" x:Name="lbl_cadran" VerticalAlignment="Top" Width="153" />
        <TextBox Height="23" HorizontalAlignment="Left" IsReadOnly="True" Margin="266,256,0,0" x:Name="Txt_LibelleTypeCompteur" VerticalAlignment="Top" Width="213" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="726,151,0,0" x:Name="Txt_NouvNumCompteur" VerticalAlignment="Top" Width="126" IsReadOnly="True" />
