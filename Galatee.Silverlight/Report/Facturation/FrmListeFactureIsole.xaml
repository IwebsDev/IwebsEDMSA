<controls:ChildWindow
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk" 
    xmlns:Controls="clr-namespace:SilverlightContrib.Controls;assembly=SilverlightContrib.Controls" 
    x:Class="Galatee.Silverlight.Report.FrmListeFacture"
           Width="655" Height="290" 
           Title="FrmStatistiqueVente" Style="{StaticResource ChildWindowGalatee}">
    <Grid x:Name="LayoutRoot" Margin="2"> 
        <Grid.RowDefinitions>
            <RowDefinition /> 
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Controls:GroupBox FontWeight="SemiBold" Margin="0,6,0,0" x:Name="groupBox1_Copy3" Header="Critères" HorizontalAlignment="Left" Width="627" />
        <Button x:Name="CancelButton" Content="Fermer" Click="CancelButton_Click" Width="90" Height="23" HorizontalAlignment="Right" Margin="0,5,21,7" Grid.Row="1" />
        <Button x:Name="OKButton" Content="OK" Click="OKButton_Click" Width="90" Height="23" HorizontalAlignment="Right" Margin="0,5,116,7" Grid.Row="1" />
        <sdk:Label Height="19" HorizontalAlignment="Left" Margin="31,27,0,0" x:Name="lbl_Centre_Copy" VerticalAlignment="Top" Width="75" Content="Site" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="166,25,0,0" x:Name="Txt_LibelleSite" VerticalAlignment="Top" Width="219" IsReadOnly="True" />
        <Button Content="..." Height="23" HorizontalAlignment="Left" Margin="114,0,0,134" x:Name="btn_Site" VerticalAlignment="Bottom" Width="43" Click="btn_Site_Click" />
        <TextBox HorizontalAlignment="Left" x:Name="txt_lotri" Height="23" Margin="584,25,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Visibility="Collapsed"/>
        <sdk:Label HorizontalAlignment="Left" Content="Lot" Height="23" Margin="495,25,0,0" VerticalAlignment="Top" Width="84" Visibility="Collapsed"/>
        <sdk:DatePicker x:Name="dtp_DateDebut" HorizontalAlignment="Left" Height="23" Margin="115,76,0,0" VerticalAlignment="Top" Width="211"/>
        <sdk:DatePicker x:Name="dtp_DateFin" HorizontalAlignment="Left" Height="23" Margin="115,104,0,0" VerticalAlignment="Top" Width="211"/>
        <sdk:Label Height="21" HorizontalAlignment="Left" Margin="31,78,0,0" x:Name="lbl_Centre_Copy3" VerticalAlignment="Top" Width="79" Content="Date debut" />
        <sdk:Label Height="19" HorizontalAlignment="Left" Margin="31,108,0,0" x:Name="lbl_Centre_Copy4" VerticalAlignment="Top" Width="79" Content="Date fin " />
        <sdk:Label Height="23" HorizontalAlignment="Left" Margin="31,49,0,0" x:Name="lbl_Centre" VerticalAlignment="Top" Width="77" Content="Centre" Visibility="Collapsed" />
        <Button Content="..." Height="23" HorizontalAlignment="Left" Margin="115,50,0,0" x:Name="btn_Centre" VerticalAlignment="Top" Width="42" Click="btn_Centre_Click" Visibility="Collapsed" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="166,53,0,0" x:Name="Txt_LibelleCentre" VerticalAlignment="Top" Width="219" IsReadOnly="True" Visibility="Collapsed" />
        <RadioButton Content="Top 1" GroupName="Top" x:Name="rbt_Top1" HorizontalAlignment="Left" Margin="119,142,0,0" VerticalAlignment="Top" Checked="rbt_Top1_Checked" IsChecked="True"/>
        <RadioButton Content="Top 3" GroupName="Top"  x:Name="rbt_Top3" HorizontalAlignment="Left" Margin="221,142,0,0" VerticalAlignment="Top" Checked="rbt_Top3_Checked"/>
    </Grid>
</controls:ChildWindow>