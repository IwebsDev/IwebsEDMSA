        <ProgressBar x:Name="prgBar" HorizontalAlignment="Left" Height="23" Margin="0,12,0,0" VerticalAlignment="Top" Width="231" IsIndeterminate="True" Grid.Row="1"/>
        <CheckBox Name="Chk_Categorie" Content="Inclure la catégorie" HorizontalAlignment="Left" Margin="286,107,0,0" VerticalAlignment="Top"/>
