<controls:ChildWindow
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk" x:Class="Galatee.Silverlight.Report.UcVisuManualDailyPayment"
           Width="400" Height="195" 
           Title="Payment Journalier"   xmlns:my="clr-namespace:Galatee.Silverlight.Library;assembly=Galatee.Silverlight.Library" Style="{StaticResource ChildWindowGalatee}">
    <Grid x:Name="LayoutRoot" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Button x:Name="CancelButton" Content="Cancel" Click="CancelButton_Click" Width="75" Height="23" HorizontalAlignment="Right" Margin="0,12,0,0" Grid.Row="1" />
        <Button x:Name="OKButton" Content="OK" Click="OKButton_Click" Width="75" Height="23" HorizontalAlignment="Right" Margin="0,12,79,0" Grid.Row="1" />
        <sdk:Label HorizontalAlignment="Left" Height="28" Margin="10,23,0,0" VerticalAlignment="Top" Width="105" Content="Agent de Collecte :"/>
        <sdk:Label HorizontalAlignment="Left" Height="28" Margin="10,56,0,0" VerticalAlignment="Top" Width="120" Content="Date de Payement :"/>
        <ComboBox x:Name="CmbCollector" HorizontalAlignment="Left" Margin="142,23,0,0" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="CmbDatePayment" HorizontalAlignment="Left" Margin="142,54,0,0" VerticalAlignment="Top" Width="120"/>
    </Grid>
</controls:ChildWindow>