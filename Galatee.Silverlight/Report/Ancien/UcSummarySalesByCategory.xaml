        <RadioButton x:Name="factureration_Manuelle_Resiliation" GroupName="rbl_groupe" Content="Facturation manuelle et Résiliation" HorizontalAlignment="Left" Margin="135,60,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="Tous" GroupName="rbl_groupe" Content="Tous" HorizontalAlignment="Left" Margin="361,60,0,0" VerticalAlignment="Top"/>
    </Grid>
