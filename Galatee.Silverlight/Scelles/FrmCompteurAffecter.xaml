        <CheckBox Content="Attribué" Name="Chk_Attribuer" HorizontalAlignment="Left" Margin="445,50,0,0" VerticalAlignment="Top" Height="24" Width="95"/>
        <CheckBox Content="Disponible" Name="Chk_Disponnible" HorizontalAlignment="Left" Margin="445,86,0,0" VerticalAlignment="Top" Height="19" Width="112"/>
