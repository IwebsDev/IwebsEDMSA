<sdk:ChildWindow
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
           xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk" xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"
    xmlns:Controls="clr-namespace:SilverlightContrib.Controls;assembly=SilverlightContrib.Controls" x:Class="Galatee.Silverlight.Parametrage.UcTarif"
           Width="569" Height="220" OverlayBrush="Transparent"
           Title="Tarif" AllowDrop="False" Style="{StaticResource ChildWindowGalatee}" >
    <Grid x:Name="LayoutRoot" Margin="2,0,2,-2" Width="541" Height="170" VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <sdk:Label Height="28" Margin="3,17,0,0" x:Name="lab_Code" VerticalAlignment="Top" Content="Code
                   :" HorizontalAlignment="Left" Width="57" />
        <TextBox Height="23" HorizontalAlignment="Right" Margin="0,19,358,0" x:Name="Txt_Code" VerticalAlignment="Top" Width="107" MaxLength="2" TabIndex="1" TextChanged="On_TextChanged" Grid.ColumnSpan="4" Grid.Column="1" />
        <sdk:Label Content="Libellé :" Height="28" HorizontalAlignment="Left" Margin="5,44,0,0" x:Name="lab_Libelle" VerticalAlignment="Top" Width="57" />
        <TextBox Height="23" HorizontalAlignment="Right" Margin="0,47,7,0" MaxLength="30" x:Name="Txt_Libelle" VerticalAlignment="Top" Width="458" BorderThickness="2" TabIndex="2" DataContext="{Binding}" TextChanged="On_TextChanged" Grid.ColumnSpan="4" Grid.Column="1" />
        <Button Content="OK" HorizontalAlignment="Right" IsEnabled="True" Margin="0,126,88,25" x:Name="btnOk" TabIndex="3" Width="75" Click="BtnOK_Click" />
        <Button Content="Fermer" IsEnabled="True" Margin="461,126,7,25" x:Name="Btn_Reinitialiser" TabIndex="3" Click="Btn_Annuler_Click" />
        <Controls:GroupBox Name="GboCodeDepart" Header="Informations" HorizontalAlignment="Left" VerticalAlignment="Top" Height="112" Width="539" Grid.ColumnSpan="5"/>
        <sdk:Label HorizontalAlignment="Left" Height="28" Margin="3,73,0,0" VerticalAlignment="Top" Width="57" Content="Prodiut" Grid.Column="1" />
        <ComboBox HorizontalAlignment="Left" Margin="76,75,0,0" VerticalAlignment="Top" Width="270" Height="26" x:Name="CboProduit" SelectionChanged="OnComboSelectionChanged" />
    </Grid>
</sdk:ChildWindow>