<sdk:ChildWindow
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
           xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk" xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit" xmlns:Controls="clr-namespace:SilverlightContrib.Controls;assembly=SilverlightContrib.Controls" x:Class="Galatee.Silverlight.Parametrage.UcRegCli"
           Width="592" Height="300" OverlayBrush="Transparent"
           Title="Regroupement Client" AllowDrop="False" Style="{StaticResource ChildWindowGalatee}" >
    <Grid x:Name="LayoutRoot" Margin="2" Height="241" Width="561">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="106*" />
            <ColumnDefinition Width="322*" />
            <ColumnDefinition Width="0*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="232*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Controls:GroupBox Header="Informations Regroupement Client" Name="GroupBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="561" Height="186" Grid.ColumnSpan="2"/>

        <sdk:Label Content="CODE :" Height="28" HorizontalAlignment="Left" Margin="10,28,0,0" x:Name="lab_Regroupement" VerticalAlignment="Top" Width="91" />
        <TextBox Height="23" HorizontalAlignment="Right" Margin="0,28,373,0"  x:Name="Txt_Regroupement" TabIndex="1" VerticalAlignment="Top" Width="81" TextChanged="On_TextChanged" Grid.ColumnSpan="2" />
        <!--<sdk:Label Content="Dénomination :" Height="28" HorizontalAlignment="Left" Margin="61,28,0,0" x:Name="lab_Denomination" VerticalAlignment="Top" Width="99" Grid.Column="1" />-->
        <Button Content="OK" Height="23" HorizontalAlignment="Left" IsEnabled="True" Margin="254,198,0,20" x:Name="btnOk" TabIndex="5" Width="75" Click="BtnOK_Click" Grid.Column="1" />
        <Button Content="Fermer" Height="23" HorizontalAlignment="Left" IsEnabled="True" Margin="335,198,0,20" x:Name="Btn_Annuler" TabIndex="6" Width="75" Click="Btn_Annuler_Click" Grid.Column="1" />
        <sdk:Label Content="Libellé :" Height="28" HorizontalAlignment="Left" Margin="10,57,0,0" x:Name="lab_Libelle" VerticalAlignment="Top" Width="57" />
        <TextBox Height="23" HorizontalAlignment="Right" Margin="0,57,12,0" MaxLength="70" x:Name="Txt_Libelle" TabIndex="3" VerticalAlignment="Top" Width="442" TextChanged="On_TextChanged" Grid.ColumnSpan="2" />
        <sdk:Label Content="Adresse 1 :" Height="28" HorizontalAlignment="Left" Margin="10,86,0,0" x:Name="lab_Adresse1" VerticalAlignment="Top" Width="74" />
        <TextBox Height="23" HorizontalAlignment="Right" Margin="0,86,288,0" MaxLength="30" x:Name="Txt_Adresse1" TabIndex="4" VerticalAlignment="Top" Width="166" TextChanged="On_TextChanged" Grid.ColumnSpan="2" />
        <!--<ComboBox Grid.Column="1" Height="23" HorizontalAlignment="Right" Margin="0,28,12,0" x:Name="Cbo_Denomination" VerticalAlignment="Top" Width="243" TabIndex="2" />-->
        <sdk:Label Content="Adresse 2 :" Height="28" HorizontalAlignment="Left" Margin="139,86,0,0" x:Name="lab_Adresse2" VerticalAlignment="Top" Width="65" Grid.Column="1" />
        <TextBox Height="23" HorizontalAlignment="Right" Margin="0,86,12,0" MaxLength="30" x:Name="Txt_Adresse2" TabIndex="4" VerticalAlignment="Top" Width="200" Grid.Column="1"  />
        <sdk:Label Content="Code Postal :" Height="28" HorizontalAlignment="Left" Margin="10,115,0,0" x:Name="lab_CodePostal" VerticalAlignment="Top" Width="91" />
        <TextBox Grid.ColumnSpan="2" Height="23" HorizontalAlignment="Right" Margin="0,115,385,0" MaxLength="5" x:Name="Txt_CodePostal" TabIndex="5" VerticalAlignment="Top" Width="69" />
        <sdk:Label Content="Bureau :" Grid.Column="1" Height="28" HorizontalAlignment="Left" Margin="43,115,0,0" x:Name="lab_Bureau" VerticalAlignment="Top" Width="57" />
        <TextBox Grid.Column="1" Height="23" HorizontalAlignment="Right" Margin="0,115,12,0" MaxLength="25" x:Name="Txt_Bureau" TabIndex="6" VerticalAlignment="Top" Width="304"  />
        <sdk:Label Content="Traitement :" Height="28" HorizontalAlignment="Left" Margin="10,144,0,0" x:Name="lab_Traitement" VerticalAlignment="Top" Width="91" />
        <TextBox Grid.ColumnSpan="2" Height="23" HorizontalAlignment="Right" Margin="0,144,385,0" MaxLength="1" x:Name="Txt_Traitement" TabIndex="7" VerticalAlignment="Top" Width="69" />
    </Grid>
</sdk:ChildWindow>