        </Grid.RowDefinitions>
        <my:GroupBox FontWeight="SemiBold" x:Name="groupBox1_Copy"  />
        <Button x:Name="CancelButton" Content="Annuler" Click="CancelButton_Click" Width="75" Height="23" HorizontalAlignment="Right" Margin="0,5,0,7" Grid.Row="1" TabIndex="4" />
